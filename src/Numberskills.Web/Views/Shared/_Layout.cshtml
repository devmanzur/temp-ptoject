@using Microsoft.AspNetCore.Http
@using Microsoft.Extensions.Localization
@using Numberskills.Web.Resources
@inject IHttpContextAccessor _httpContextAccessor
@inject IStringLocalizer<SharedResource> _localizer
<script>
     const isSwedish = '@System.Globalization.CultureInfo.CurrentUICulture.Name'.toUpperCase() === "SV";
</script>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=30.00,"/>
    <title>@_localizer["appName"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/favlogo.png">

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.11.2/css/all.css" crossorigin="anonymous">
    <link href="~/lib/jquery-loader/jquery.loading.min.css" rel="stylesheet"/>
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet"/>
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <link href="https://cdn.syncfusion.com/ej2/bootstrap4.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>


<body class="sidebar-mini layout-fixed text-sm layout-footer-fixed" style="padding-top: 0">
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand-md navbar-white text-sm">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                    <i class="far fa-bars"></i>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-primary elevation-1">
        <a href="/" class="brand-link text-center">
            <span class="brand-text font-weight-light">
                <img src="~/images/company-logo.png" style="height:36px;" alt=""/>
            </span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 mb-3 d-flex">
                <div class="image">
                    
                </div>
            </div>


            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column nav-flat" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                       <a href="/" id="nav-users" class="nav-link @((Context.Request.Path == "/home" || Context.Request.Path == "/") ? "active" : "")">
                           <i class="nav-icon far fa-home"></i>
                           <p>
                               @_localizer["home"]
                           </p>
                       </a>
                   </li>

                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <div class="content-wrapper">
        <section class="content pt-2 pb-2">
            @RenderBody()
        </section>
    </div>

    <footer class="main-footer">
        <div class="navbar">
            <strong>@_localizer["maintainer"]<a href="https://numberskills.se"> Numberskills </a>.</strong>
            <vc:culture-picker/>
        </div>
    </footer>

</div>

<script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
<script>
    $.widget.bridge('uibutton', $.ui.button)
</script>
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/notify/notify.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
<script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
<script src="~/lib/jquery-loader/jquery.loading.min.js"></script>
<script src="~/dist/js/adminlte.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.14"></script>
<script src=https://cdn.syncfusion.com/ej2/19.1.57/ej2-vue-es5/dist/ej2-vue.min.js type="text/javascript"></script>
<script src="https://unpkg.com/v-tooltip"></script>
<script src="~/plugins/moment.min.js"></script>
<script src="~/js/helper.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/plugins/load-image.all.min.js"></script>
<script>
    $(document).ready(() => {

        let currentUrlController = location.href.split('/')[3];
        $('.top-nav').each((i, el) => {
            let elHref = el.href.split('/')[3];

            if (elHref === currentUrlController)
                $(el).addClass('active-link');
            else
                $(el).removeClass('active-link');
        });
    });
</script>
@await RenderSectionAsync("styles", false);
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>