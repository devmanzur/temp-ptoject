@using Microsoft.Extensions.Localization
@using Numberskills.Web.Resources
@inject IStringLocalizer<SharedResource> _localizer
@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid" id="home_page">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 h-100" :src="currentImageUrl">
            </div>
        </div>
        <a class="carousel-control-prev" role="button" data-slide="prev" @@click="onPrevClicked()">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" role="button" data-slide="next" @@click="onNextClicked()">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

@section scripts{
    <script src="~/js/home.js" asp-append-version="true"></script>
}